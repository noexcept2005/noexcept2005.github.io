@charset "UTF-8";.products-page{padding:2rem 0}.product-header{text-align:center;margin-bottom:3rem}.product-header h1{font-size:2.5rem;margin-bottom:1rem;color:var(--text-color)}.product-header p{color:var(--text-secondary);font-size:1.1rem}.products-list{display:grid;grid-template-columns:repeat(auto-fit,minmax(300px,1fr));gap:2rem;max-width:1200px;margin:0 auto}.product-card{background:var(--card-background);border-radius:12px;padding:2rem;box-shadow:0 4px 6px rgba(0,0,0,.1);transition:transform .3s ease,box-shadow .3s ease}.product-card:hover{transform:translateY(-5px);box-shadow:0 8px 12px rgba(0,0,0,.15)}.product-card h2{font-size:1.8rem;margin-bottom:1rem;color:var(--text-color)}.product-card .product-image{width:100%;height:auto;border-radius:8px;margin-bottom:1rem}.product-card .product-description{color:var(--text-secondary);margin-bottom:1.5rem;line-height:1.6}.product-card .product-features{list-style:none;padding:0;margin-bottom:1.5rem}.product-card .product-features li{padding:.5rem 0;color:var(--text-secondary)}.product-card .product-features li:before{content:"âœ“";color:var(--accent-color);margin-right:.5rem}.product-card .product-actions{display:flex;gap:1rem;margin-top:1.5rem}.product-card .product-actions a{flex:1;padding:.75rem 1.5rem;border-radius:6px;text-align:center;text-decoration:none;font-weight:500;transition:background-color .3s ease}.product-card .product-actions a.btn-primary{background-color:var(--accent-color);color:#fff}.product-card .product-actions a.btn-primary:hover{background-color:var(--accent-color-dark)}.product-card .product-actions a.btn-secondary{background-color:transparent;border:2px solid var(--accent-color);color:var(--accent-color)}.product-card .product-actions a.btn-secondary:hover{background-color:var(--accent-color);color:#fff}@media(max-width:768px){.products-list{grid-template-columns:1fr}.product-header h1{font-size:2rem}}